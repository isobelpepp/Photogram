<div class="posts">

  <% @posts.each do |post| %>
    <section class="post">
    <div class="user">
    <div class="avatar">
      <img src="user_avatar.jpg">
    </div>
    <div class="username">
      <%= post.user.username %>
    </div>
  </div>
  <img class='main-image' src="<%=(url_for(post.image))%>"/> 
  <div class="caption">
    <%= post.caption %>
  </div>
    </section>
  <% end %>
</div>


